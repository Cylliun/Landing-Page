{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}